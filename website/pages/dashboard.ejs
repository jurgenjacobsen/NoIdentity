<%- include('blocks/header', {client: client, auth: auth, user: user, permissions: permissions}) %>
<div class="head">
    <h1 class="page-title">Painel de customização</h1>
</div>
<svg style="margin-top: -50px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#272a2c" fill-opacity="1" d="M0,128L48,112C96,96,192,64,288,96C384,128,480,224,576,266.7C672,309,768,299,864,261.3C960,224,1056,160,1152,122.7C1248,85,1344,75,1392,69.3L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
<div class="dashboard">
    <div class="container">
        <div class="guild-list">
            <% if(user.id === client.config.ownerID) {%>
                <% client.guilds.cache.map(guild => { %>
                    <div class="guild">
                        <img class="guild-icon" src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.jpg?size=512">
                        <p class="guild-name"><%= guild.name %></p>
                        <% if(client.guilds.cache.get(guild.id)) {%>
                            <a class="guild-btn" href="/edit/<%= guild.id %>?type=guild">Editar</a>
                        <% } else { %>
                            <a class="guild-btn" href="/invite">Adicionar</a>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <% if(user.guilds) { %>
                    <% user.guilds.forEach(guild => { %>
                        <% if(permissions(guild.permissions).has('MANAGE_GUILD')) { %>
                            <div class="guild">
                                <img class="guild-icon" src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.jpg?size=512">
                                <p class="guild-name"><%= guild.name %></p>
                                <% if(client.guilds.cache.get(guild.id)) {%>
                                    <a class="guild-btn" href="/edit/<%= guild.id %>?type=guild">Editar</a>
                                <% } else { %>
                                    <a class="guild-btn" href="/invite">Adicionar</a>
                                <% } %>
                            </div>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <script> document.location.href = '/logout' </script>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
