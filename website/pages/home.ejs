<%- include('blocks/header', {client: client, auth: auth, user: user, moment: moment, page: page, uptime: uptime, i18n: i18n, crew: crew, lang: lang}) %>

<body>

    <div class="container splash-div">
        <h1 class="page-title"><%= i18n.__("site.home.welcome") %></h1>
        <p class="description"><%= i18n.__("site.home.welcome_description") %></p>
        <div class="btn-bar">
            <a class="btn animate left" href="/add"><%= i18n.__("site.home.addMe") %></a>
            <a class="btn animate right" href="#features"><%= i18n.__("site.home.my_features") %></a>
            <a class="btn animate" href="/patreon" target="_blank"><%= i18n.__("site.home.patreon") %></a>
        </div>
    </div>

    <svg class="top-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path fill="#272a2c" fill-opacity="1" d="M0,96L30,85.3C60,75,120,53,180,74.7C240,96,300,160,360,186.7C420,213,480,203,540,181.3C600,160,660,128,720,112C780,96,840,96,900,122.7C960,149,1020,203,1080,192C1140,181,1200,107,1260,80C1320,53,1380,75,1410,85.3L1440,96L1440,320L1410,320C1380,320,1320,320,1260,320C1200,320,1140,320,1080,320C1020,320,960,320,900,320C840,320,780,320,720,320C660,320,600,320,540,320C480,320,420,320,360,320C300,320,240,320,180,320C120,320,60,320,30,320L0,320Z"></path>  
    </svg>
    <div class="secondary-color-div">
        <div class="container">
            <div class="stats" id="stats">
                <div class="container">
                    <br>
                    <h1 class="title"><%= i18n.__("site.home.stats") %></h1>
                    <div class="list">
                        <div class="item">
                            <img src="/assets/images/clock.png">
                            <div class="name"><%= i18n.__("site.home.uptime") %></div>
                            <div class="number"><%= moment.duration(client.uptime).format(' D [dias], H [h], m [m], s [s]') %></div>
                        </div>
                        <div class="item">
                            <img src="/assets/images/crowd.png">
                            <div class="name"><%= i18n.__("site.home.users") %></div>
                            <div class="number"><%= client.kFormatter(client.totalUsers) %></div>
                        </div>
                        <div class="item">
                            <img src="/assets/images/server.png">
                            <div class="name"><%= i18n.__("site.home.servers") %></div>
                            <div class="number"><%= client.kFormatter(client.guilds.cache.size) %></div>
                        </div>
                        <div class="item">
                            <img src="/assets/images/file.png">
                            <div class="name"><%= i18n.__("site.home.ran_commands") %></div>
                            <div class="number">+200k</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <div class="features" id="features">
                <div class="container">
                    <p><br><br><br></p>
                    <h1 class="title"><%= i18n.__("site.home.features") %></h1>
                    <div class="list">
                        <div class="item">
                            <h1><%= i18n.__("site.home.features_list.moderation") %></h1>
                        </div>
                        <div class="item">
                            <h1><%= i18n.__("site.home.features_list.music") %></h1>
                        </div>
                        <div class="item">
                            <h1><%= i18n.__("site.home.features_list.automation") %></h1>
                        </div>
                        <div class="item">
                            <h1><%= i18n.__("site.home.features_list.fun") %></h1>
                        </div>
                        <div class="item">
                            <h1><%= i18n.__("site.home.features_list.info") %></h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <svg class="bottom-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path fill="#272a2c" fill-opacity="1" d="M0,256L48,261.3C96,267,192,277,288,261.3C384,245,480,203,576,176C672,149,768,139,864,154.7C960,171,1056,213,1152,202.7C1248,192,1344,128,1392,96L1440,64L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
    </svg>
    <div class="container">
        <div class="crew-div">
            <h1 class="title"><%= i18n.__("site.home.staff") %></h1>
            <div class="crew-members">
                <% crew.map(u => {
                %>
                        
                    <div class="member">
                        <img class="member-icon" src="https://cdn.discordapp.com/avatars/<%= u.id %>/<%= u.avatar %>.png?size=1024"/>
                        <h1>
                            <%= u.username %></h1>
                            <p><% if(client.usersdata.get(u.id).profile.role === 'Desenvolvedor' || client.usersdata.get(u.id).profile.role === 'Developer') { %>
                                <img class="role-icon" src="/assets/images/dev_icon.png"/>
                            <% } else if(client.usersdata.get(u.id).profile.role === 'Patrocinador' || client.usersdata.get(u.id).profile.role === 'Partner') { %>
                                <img class="role-icon" src="/assets/images/sponsor_icon.png"/>
                            <% } else if(client.usersdata.get(u.id).profile.role === 'Bughunter') { %>
                                <img class="role-icon" src="/assets/images/bughunter.png"/>
                            <% } %>
                            <%= client.usersdata.get(u.id).profile.role === 'Desenvolvedor' ? i18n.__("site.home.developer") : '' %>
                            <%= client.usersdata.get(u.id).profile.role === 'Bughunter' ? 'Bughunter' : '' %></p>
                    </div>
                <%
                    });
                %>
            </div>
        </div>
    </div>
</body>

<%- include('blocks/footer') %>